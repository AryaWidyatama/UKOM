    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/tenali"
        android:text="rose"
        android:textColor="#090808"
        android:textSize="20sp" />



</LinearLayout>