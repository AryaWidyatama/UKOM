<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgpage"
        tools:context=".DetailUbahBarang">

        <EditText
            android:id="@+id/idmenuUbah"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:alpha="0"
            android:background="@drawable/kolom1"
            android:fontFamily="@font/noto"
            android:gravity="center"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="#050505"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.576"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idKaaategoriUbah" />

        <EditText
            android:id="@+id/EmailUbah"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:background="@drawable/kolom1"
            android:fontFamily="@font/noto"
            android:gravity="center"
            android:hint="Masukkan No.Telp Anda"
            android:padding="5dp"
            android:textColor="#050505"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idKaaategoriUbah" />

        <EditText
            android:id="@+id/HaaargaUbah"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/kolom1"
            android:fontFamily="@font/noto"
            android:gravity="center"
            android:hint="Masukkan Harga Barang"
            android:padding="5dp"
            android:textColor="#050505"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MenuUbah" />

        <EditText
            android:id="@+id/MenuUbah"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:background="@drawable/kolom1"
            android:fontFamily="@font/noto"
            android:gravity="center"
            android:hint="Masukkan Judul Barang"
            android:padding="5dp"
            android:textColor="#050505"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idKaaategoriUbah" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/webp_net_resizeimage__4_" />

        <ImageView
            android:id="@+id/GAAMABARuBAH"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/b13" />

        <EditText
            android:id="@+id/idKaaategoriUbah"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/kolom1"
            android:fontFamily="@font/noto"
            android:gravity="center"
            android:hint="Masukkan  ID Kategori"
            android:padding="5dp"
            android:textColor="#050505"
            android:textColorHint="#3A3A3A"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GAAMABARuBAH" />


        <EditText
            android:id="@+id/KodeUbah"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/kolom1"
            android:fontFamily="@font/noto"
            android:gravity="center"
            android:hint="Masukkan Kode Barang"
            android:padding="5dp"
            android:textColor="#050505"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idKaaategoriUbah" />

        <EditText
            android:id="@+id/DsripsiUbah"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:background="@drawable/kolom1"
            android:fontFamily="@font/noto"
            android:gravity="center"
            android:hint="Masukkan Deskripsi Barang"
            android:padding="5dp"
            android:textColor="#050505"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idKaaategoriUbah" />

        <Button
            android:id="@+id/btnout5"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="320dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/rounded5"
            android:fontFamily="@font/noto"
            android:text="Unggah Barang"
            android:textColor="#F4F3F3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/KodeUbah"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/tenali"
            android:text="Unggah Gambar"
            android:textColor="#090909"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ubahGaambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_flip_camera_ios_24" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>